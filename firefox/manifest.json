{
  "background": {
    "scripts": [
      "js/firefox-api.js",
      "js/install.js"
    ],
    "persistent": false
  },
  "description": "Runs scripts on certain domains.",
  "homepage_url": "https://github.com/albertowd/domain-code-runner",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "manifest_version": 2,
  "name": "Domain Code Runner",
  "options_page": "options.html",
  "page_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "version": "1.0"
}